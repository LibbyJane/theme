<div class="statements-bar color-{{ section.settings.color_scheme }} content-padding-inline">
    <ul class="statements-bar__list">
        {%- for block in section.blocks -%}
            <li
                class="statements-bar__item-container"
                id="statements-{{ section.id }}-{{ forloop.index }}"
                {{ block.shopify_attributes }}
            >
                {%- if block.settings.text != blank -%}
                    {%- if block.settings.link != blank -%}
                        <a class="statements-bar__item" href="{{ block.settings.link }}">
                    {% else %}
                        <div class="statements-bar__item"
                    {%- endif -%}
                    {%- if block.settings.icon != 'none' -%}
                        {% render 'icon-accordion', icon: block.settings.icon %}
                    {%- endif -%}
                    <span class="statement__text">{{ block.settings.text | escape }}</span>
                    {%- if block.settings.link != blank -%}
                        </a>
                    {% else %}
                        </div>
                    {%- endif -%}
                {%- endif -%}
            </li>
            {%- endfor -%}
        </ul>
</div>

