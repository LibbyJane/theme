{
    "sections": {
        "main": {
            "type": "main-product",
            "blocks": {
                "vendor": {
                    "type": "text",
                    "settings": {
                        "text": "{{ product.vendor }}",
                        "text_style": "uppercase"
                    }
                },
                "title": {
                    "type": "title"
                },
                "caption": {
                    "type": "text",
                    "settings": {
                        "text": "{{ product.metafields.descriptors.subtitle.value }}",
                        "text_style": "subtitle"
                    }
                },
                "price": {
                    "type": "price",
                    "settings": {
                        "text_style": "display",
                        "price_font_scale": 120,
                        "use_price_color_highlight": false
                    }
                },
                "variant_picker": {
                    "type": "variant_picker",
                    "settings": {
                        "picker_type": "button"
                    }
                },
                "quantity_selector": {
                    "type": "quantity_selector"
                },
                "buy_buttons": {
                    "type": "buy_buttons",
                    "settings": {
                        "show_dynamic_checkout": true,
                        "show_gift_card_recipient": true
                    }
                },
                "description": {
                    "type": "description"
                },
                "share": {
                    "type": "share",
                    "settings": {
                        "share_label": "Share"
                    }
                }
            },
            "block_order": [
                "vendor",
                "title",
                "caption",
                "price",
                "variant_picker",
                "quantity_selector",
                "buy_buttons",
                "description",
                "share"
            ],
            "settings": {
                "enable_sticky_info": true,
                "section_color_scheme": "scheme-background-2",
                "section_background_style": "torn",
                "content_color_scheme": "scheme-background",
                "content_background_style": "paper",
                "use_color_highlight": true,
                "media_size": "large",
                "constrain_to_viewport": true,
                "media_fit": "cover",
                "gallery_layout": "thumbnail_slider",
                "media_position": "left",
                "image_zoom": "lightbox",
                "mobile_thumbnails": "show",
                "hide_variants": false,
                "enable_video_looping": false,
                "padding_top": 36,
                "padding_bottom": 12
            }
        },
        "related-products": {
            "type": "related-products",
            "settings": {
                "heading": "You may also like",
                "heading_size": "h2",
                "columns_desktop": 4,
                "color_scheme": "scheme-background",
                "image_ratio": "square",
                "show_secondary_image": true,
                "show_vendor": false,
                "show_rating": false,
                "columns_mobile": "2",
                "padding_top": 36,
                "padding_bottom": 28
            }
        }
    },
    "order": [
        "main",
        "related-products"
    ]
}